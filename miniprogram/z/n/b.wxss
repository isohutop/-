.m{padding:7vw 7vw 0 7vw;background:#fff}

.rq{margin-bottom: 2vw;color:#828282}
.rq .l,.rq .r{font-weight: bold;color:#4d4d4d}
.rq .r{display: inline-block;width: 43vw}

.m .q{font-size: 3.9vw;padding: 0 3.4vw}
.sj{margin-top: 8vw;text-align: center;width: 49vw;margin-left: auto;margin-right: auto;color:#828282;background: #f3f3f3;line-height: 2.5;border-radius: 6px}

.m .p{font-weight: bolder;
  --s: #e4e5e6;
  --t: #fdfeff;
  font-size: 4.1vw;
  color: #666666; 
  margin-bottom: 4.9vw;
  padding: .5em 1em;
  border-radius: 3px;
  background: linear-gradient(145deg, var(--s), var(--t));
  transition: --t 0.4s, --s 0.4s, color 1s
}
.m .p:hover {
  --s: #fdfeff;
  --t: #e4e5e6;
  color: #4c4c4c
}



