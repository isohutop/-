.mb{position:absolute;z-index:1000;top:0;left:0;bottom: 0;right:0;background:rgba(0,0,0,0.6)}
.nb{max-height: 82vh;position: fixed;z-index: 1001;bottom: 0;left:0;width: 100vw;border-radius: 8px 8px 0 0;transition:transform .3s;background: #ffffff;flex-direction: column; flex-basis: fit-content; align-items: center;box-sizing: border-box}

.nb .p{position: absolute;z-index: 5;border-bottom: 1px dashed #f1f1f1;width: 100vw;height: 11.3vw;text-align: center;display: flex;padding-top: 3.4vw;background:#f2f2f2;color: #010101;border-radius: 8px 8px 0 0}
.nb .p .l {flex:1} 
.nb .p .m {flex:2;width: 72vw;font-size: 5.2vw;font-weight: bold;line-height: 11.3vw}
.nb .p .r {flex:1}
.nb .p .r .x{display: inline-block;font-size: 2.8vw;margin-top: 4.5vw;line-height: 1;color:#888888}
.nb .w{padding:11vw 7vw 19vw;overflow: scroll;-webkit-overflow-scrolling: touch}
.nb .n{margin: 10vw 7vw 8vw}
.nb .n .m{color: #828282;text-indent: 8.6vw;font-size: 4.3vw;margin-bottom: 4.3vw;}

.nb .q{position: absolute;width:100vw;bottom: 0;left:0;height: 11.3vw;text-align: center;padding:4vw 0 5.5vw}
.nb .q .ba{width: 68vw;margin-left: auto;margin-right: auto;background: #f5f5f5;color: #010101;font-size: 4.9vw;line-height: 2.2}
